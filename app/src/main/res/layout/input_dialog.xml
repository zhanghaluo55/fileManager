<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="25dp">

  <TextView
    android:id="@+id/dialog_tip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="请输入xxx名称"
    android:layout_marginBottom="10dp"
    android:textSize="16sp" />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:id="@+id/dialog_fileInfo"
      android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:id="@+id/dialog_fileName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="文件名:"
          android:layout_marginBottom="10dp"
          android:textSize="16sp" />
      <TextView
          android:id="@+id/dialog_fileNameValue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:text="文件名"
          android:layout_marginBottom="10dp"
          android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:id="@+id/dialog_fileTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="文件最后修改时间:"
          android:layout_marginBottom="10dp"
          android:textSize="16sp" />
      <TextView
          android:id="@+id/dialog_fileTimeValue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:text="yyyy-MM-dd"
          android:layout_marginBottom="10dp"
          android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:id="@+id/dialog_fileAccessTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="文件最后访问时间:"
          android:layout_marginBottom="10dp"
          android:textSize="16sp" />
      <TextView
          android:id="@+id/dialog_fileAccessTimeValue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:text="yyyy-MM-dd"
          android:layout_marginBottom="10dp"
          android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:id="@+id/dialog_fileChangeTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="文件最后状态改变时间:"
          android:layout_marginBottom="10dp"
          android:textSize="16sp" />
      <TextView
          android:id="@+id/dialog_fileChangeTimeValue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:text="yyyy-MM-dd"
          android:layout_marginBottom="10dp"
          android:textSize="16sp" />
    </LinearLayout>
  </LinearLayout>
  <Button
      android:id="@+id/dialog_changeFileTimeBtn"
      android:layout_width="100dp"
      android:layout_height="40dp"
      android:textColor="@color/colorPrimaryDark"
      android:background="@color/line_grey"
      android:text="更改时间"
      android:visibility="gone"></Button>
  <EditText
    android:id="@+id/dialog_input"
    android:layout_width="match_parent"
    android:theme="@style/MyEditText"
    android:layout_height="40dp" />

</LinearLayout>